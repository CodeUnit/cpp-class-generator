{
  "name": "cpp-class-generator",
  "displayName": "VS Code C++ class generation tool",
  "description": "Generate files for C++ class",
  "version": "0.1.1",
  "engines": {
    "vscode": "^1.50.0"
  },
  "repository": {
	  "url": "https://github.com/k4li-0x0/cpp-class-generator"
  },
  "categories": [
    "Other"
  ],
  "publisher": "k4li",
  "activationEvents": [
    "onCommand:cpp-class-generator.createClass"
  ],
  "main": "./out/main.js",
  "contributes": {
    "menus": {
      "explorer/context": [
        {
          "when": "explorerResourceIsFolder",
          "command": "cpp-class-generator.createClass",
          "group": "File"
        }
      ]
    },
    "commands": [
      {
        "command": "cpp-class-generator.createClass",
        "title": "Generate C++ class files",
        "when": "false"
      }
    ],
    "configuration": {
      "title": "C++ class files generator",
      "properties": {
        "cpp-class-generator.user.name": {
          "type": ["string", "null"],
          "default": null,
          "description": "Username for copyright"
        },
        "cpp-class-generator.project.copyright": {
          "type": "string",
          "default": "//\n// Created by <%userName%> on <%date%> \n//",
          "description": "Files copyright"
        },
        "cpp-class-generator.templates.date-format": {
          "type": "string",
          "enum": [
            "DD-MM-YYYY",
            "MM-DD-YYYY",
            "YYYY-MM-DD",
            "DD-MM-YY",
            "MM-DD-YY",
            "YY-MM-DD",
            "DD/MM/YYYY",
            "MM/DD/YYYY",
            "YYYY/MM/DD",
            "DD/MM/YY",
            "MM/DD/YY",
            "YY/MM/DD",
            "DD.MM.YYYY",
            "MM.DD.YYYY",
            "YYYY.MM.DD",
            "DD.MM.YY",
            "MM.DD.YY",
            "YY.MM.DD"
          ],
          "default": "DD.MM.YYYY",
          "description": "File date format"
        },
        "cpp-class-generator.templates.header-extension": {
          "type": "string",
          "enum": [
            ".h",
            ".hpp",
            ".hh"
          ],
          "default": ".h",
          "description": "Header file extension"
        },
        "cpp-class-generator.templates.single-header-extension": {
          "type": "string",
          "enum": [
            ".h",
            ".hpp",
            ".hh"
          ],
          "default": ".hpp",
          "description": "Single header file extension"
        },
        "cpp-class-generator.templates.source-extension": {
          "type": "string",
          "enum": [
            ".cpp",
            ".cxx",
            ".cc"
          ],
          "default": ".cpp",
          "description": "Source code file extension"
        },
        "cpp-class-generator.templates.header": {
          "type": "string",
          "default": "<%copyright%>\n#pragma once\n\n<%namespaceStart%>\n <%namespaceTab%>// <%className%> \n<%namespaceTab%>class <%className%> {\n<%namespaceTab%>};\n<%namespaceEnd%> \n",
          "description": "Header file template"
        },
        "cpp-class-generator.templates.source": {
          "type": "string",
          "default": "<%copyright%>\n#include <%headerFileName%>\n\n",
          "description": "Source code file template"
        }
      }
    }
  },
  "scripts": {
	"vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "test-compile": "tsc -p ./"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.50.0",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.0",
    "@vscode/test-electron": "^2.1.5",
    "esbuild": "^0.14.49",
    "eslint": "^8.18.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4"
  }
}
